<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.com.sofftek.model.Paciente" 
		table="paciente" catalog="softtek">
        <id name="idPaciente" type="java.lang.int">
            <column name="ID_PACIENTE" />
            <generator class="identity" />
        </id>
        <property name="nombre" type="String">
            <column name="NOMBRE" length="45" not-null="true" />
        </property>
        <property name="apellido" type="String">
            <column name="APELLIDO" length="45" not-null="true" />
        </property>
        <property name="dni" type="int">
            <column name="DNI"  not-null="true" />
        </property>
		 <property name="tipoDni" type="String">
            <column name="TIPO_DNI" length="45" not-null="true" />
        </property>
        <property name="direccion" type="String">
            <column name="DIRECCION" length="45" not-null="true" />
        </property>
		 <property name="telefono" type="int">
            <column name="TELEFONO"  not-null="false" />
        </property>
		 <property name="mail" type="String">
            <column name="MAIL" length="45" not-null="false" />
        </property>
		 <property name="fecNac" type="Date">
            <column name="FECHA_NACIMIENTO"  not-null="true" />
        </property>
		 <property name="sexo" type="char">
            <column name="SEXO"  not-null="true" />
        </property>
		 <property name="estadoCivil" type="String">
            <column name="ESTADO_CIVIL" length="45" not-null="false" />
        </property>
		 <property name="familiaresACargo" type="int">
            <column name="FAMILIARES_A_CARGO"  not-null="true" />
        </property>
		 <property name="planMedico" type="Plan">
            <column name="PLAN_MEDICO"  not-null="true" />
        </property>
		 <property name="fechaBaja" type="Date">
            <column name="FECHA_BAJA"  not-null="false" />
        </property>
    </class>
</hibernate-mapping>
